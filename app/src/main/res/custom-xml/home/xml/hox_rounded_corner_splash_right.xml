<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/c_holo_gray">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffc107" />
            <corners
                android:bottomLeftRadius="5.5dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="5.5dp"
                android:topRightRadius="0dp" />
        </shape>
    </item>

    <item
        android:id="@android:id/mask"
        android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/c_holo_gray" />
            <corners
                android:bottomLeftRadius="5.5dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="5.5dp"
                android:topRightRadius="0dp" />
            <solid android:color="#ffffff" />

        </shape>
    </item>

    <item
        android:id="@android:id/background"
        android:right="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/c_splash_buttons"
                android:startColor="@color/c_splash_buttons"
                android:type="linear" />
            <corners
                android:bottomLeftRadius="5.5dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="5.5dp"
                android:topRightRadius="0dp" />
            <solid android:color="#ffffff" />

        </shape>

    </item>

</ripple>
